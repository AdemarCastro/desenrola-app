generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum StatusUsuario {
  ATIVO
  INATIVO
  BLOQUEADO
}

enum PrioridadeTarefa {
  BAIXA
  MEDIA
  ALTA
}

model Usuario {
  id               Int               @id @default(autoincrement())
  email            String            @unique
  primeiro_nome    String
  sobrenome        String
  senha            String
  data_nascimento  DateTime
  idade            Int?
  status           StatusUsuario     @default(ATIVO)
  logout_em        DateTime?
  criado_em        DateTime          @default(now())
  atualizado_em    DateTime          @updatedAt
  apagado_em       DateTime?

  papeis           UsuarioPapel[]
  projetos         ProjetoUsuario[]
  comentarios      Comentario[]
}

model UsuarioPapel {
  id       Int      @id @default(autoincrement())
  usuario  Usuario  @relation(fields: [usuarioId], references: [id])
  usuarioId Int
}

model ProjetoUsuario {
  id       Int      @id @default(autoincrement())
  usuario  Usuario  @relation(fields: [usuarioId], references: [id])
  usuarioId Int
}

model Comentario {
  id       Int      @id @default(autoincrement())
  usuario  Usuario  @relation(fields: [usuarioId], references: [id])
  usuarioId Int
}